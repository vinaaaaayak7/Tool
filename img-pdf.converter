<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Convert images to PDF online with our fully responsive image to PDF tool. Optimize and merge images into a single PDF file.">
    <meta name="keywords" content="image to PDF, convert images to PDF, online PDF tool, image optimizer">
    <meta name="author" content="Your Name">
    <title>Image to PDF Converter</title>
    <style>
        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            background-color: #f9f9f9;
            color: #333;
        }

        header {
            background-color: #007BFF;
            color: #fff;
            padding: 30px 0;
            text-align: center;
        }

        header h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        main {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
        }

        /* Image to PDF Tool Section */
        #image-to-pdf-tool {
            background-color: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        #image-to-pdf-tool h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #007BFF;
        }

        #image-input {
            display: none;
        }

        #image-to-pdf-tool label {
            display: inline-block;
            background-color: #007BFF;
            color: #fff;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            margin-bottom: 20px;
            transition: background-color 0.3s ease;
        }

        #image-to-pdf-tool label:hover {
            background-color: #0056b3;
        }

        #image-preview {
            margin-top: 20px;
        }

        #image-preview img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        #convert-btn {
            background-color: #28a745;
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

        #convert-btn:hover {
            background-color: #218838;
        }

        #download-btn {
            display: none; /* Hidden by default */
            background-color: #007BFF;
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

        #download-btn:hover {
            background-color: #0056b3;
        }

        /* Ad Space */
        #ad-space {
            margin-top: 30px;
            text-align: center;
        }

        /* Footer */
        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
        }

        footer p {
            margin: 0;
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            header h1 {
                font-size: 2rem;
            }

            #image-to-pdf-tool {
                padding: 20px;
            }

            #image-to-pdf-tool h2 {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            header h1 {
                font-size: 1.8rem;
            }

            #image-to-pdf-tool label,
            #convert-btn,
            #download-btn {
                width: 100%;
                padding: 10px 20px;
            }
        }
    </style>
    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=YOUR_ADSENSE_AD_UNIT_ID" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <h1>Image to PDF Converter</h1>
    </header>
    <main>
        <!-- Image to PDF Tool -->
        <section id="image-to-pdf-tool">
            <h2>Convert Images to PDF</h2>
            <label for="image-input">Upload Images</label>
            <input type="file" id="image-input" accept="image/*" multiple>
            <div id="image-preview"></div>
            <button id="convert-btn">Convert to PDF</button>
            <button id="download-btn">Download PDF</button>
        </section>

        <!-- Ad Space -->
        <section id="ad-space">
            <h2>Advertisement</h2>
            <!-- Google AdSense Ad Unit -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="YOUR_ADSENSE_AD_UNIT_ID"
                 data-ad-slot="YOUR_AD_SLOT_ID"
                 data-ad-format="auto"
                 data-full-width-responsive="true"></ins>
            <script>
                 (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </section>
    </main>
    <footer>
        <p>&copy; 2023 Image to PDF Converter. All rights reserved.</p>
    </footer>

    <!-- JavaScript for Image to PDF Conversion -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        const { jsPDF } = window.jspdf;

        const imageInput = document.getElementById('image-input');
        const imagePreview = document.getElementById('image-preview');
        const convertBtn = document.getElementById('convert-btn');
        const downloadBtn = document.getElementById('download-btn');
        let pdfBlob = null;

        // Handle image upload
        imageInput.addEventListener('change', function(event) {
            imagePreview.innerHTML = ''; // Clear previous previews
            const files = event.target.files;

            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const reader = new FileReader();

                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = `Image ${i + 1}`;
                    imagePreview.appendChild(img);
                };

                reader.readAsDataURL(file);
            }
        });

        // Convert images to PDF
        convertBtn.addEventListener('click', function() {
            const images = imagePreview.querySelectorAll('img');

            if (images.length === 0) {
                alert('Please upload at least one image.');
                return;
            }

            const pdf = new jsPDF();
            images.forEach((img, index) => {
                if (index > 0) pdf.addPage(); // Add a new page for each image after the first
                const imgWidth = pdf.internal.pageSize.getWidth();
                const imgHeight = (img.naturalHeight * imgWidth) / img.naturalWidth;
                pdf.addImage(img.src, 'JPEG', 0, 0, imgWidth, imgHeight);
            });

            // Generate PDF Blob
            pdfBlob = pdf.output('blob');

            // Show the Download button
            downloadBtn.style.display = 'inline-block';
        });

        // Download PDF
        downloadBtn.addEventListener('click', function() {
            if (!pdfBlob) {
                alert('No PDF generated yet. Please convert images first.');
                return;
            }

            const url = URL.createObjectURL(pdfBlob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'converted-images.pdf';
            a.click();
            URL.revokeObjectURL(url);
        });
    </script>
</body>
</html>
